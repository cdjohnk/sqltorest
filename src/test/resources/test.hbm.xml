<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
   "-//Hibernate/Hibernate Mapping DTD//EN"
   "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
   <class
      entity-name="test"
      table="test">
      <id
         name="id"
         column="id"
         type="integer"/>
      <property
         name="value"
         column="value"
         type="string"/>
   </class>
</hibernate-mapping>